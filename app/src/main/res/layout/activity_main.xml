<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/common_spacing"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/posts_avatar_size"
        android:layout_height="@dimen/posts_avatar_size"
        android:layout_marginBottom="@dimen/common_spacing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/barrier"
        tools:srcCompat="@sample/posts.json/data/authorAvatar"/>

    <TextView
        android:id="@+id/txtAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/common_spacing"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtPublished"
        app:layout_constraintEnd_toStartOf="@id/imgMenu"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        tools:text="@sample/posts.json/data/author"
        />

    <TextView
        android:id="@+id/txtPublished"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/common_spacing"
        android:layout_marginBottom="@dimen/common_spacing"
        app:layout_constraintTop_toBottomOf="@id/txtAuthor"
        app:layout_constraintBottom_toBottomOf="@id/barrier"
        app:layout_constraintEnd_toStartOf="@id/imgMenu"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        tools:text="@sample/posts.json/data/published"/>

    <ImageButton
        android:id="@+id/imgMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_spacing"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_vert_24"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="imgAvatar, txtPublished, imgMenu"/>

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginBottom="@dimen/common_spacing"
        android:layout_height="wrap_content"
        android:autoLink="web"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        app:layout_constraintBottom_toTopOf="@id/barrier2"
        tools:text="@sample/posts.json/data/content"/>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="txtContent"/>

    <ImageButton
        android:id="@+id/imgFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier2"
        app:srcCompat="@drawable/ic_favorite_24"/>
    <TextView
        android:id="@+id/txtLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        app:layout_constraintTop_toTopOf="@id/imgFavourite"
        app:layout_constraintStart_toEndOf="@+id/imgFavourite"
        app:layout_constraintBottom_toBottomOf="@+id/imgFavourite"
        tools:text="@sample/posts.json/data/likes"/>
    <ImageButton
        android:id="@+id/imgReposts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/txtLikes"
        app:layout_constraintTop_toTopOf="@+id/txtLikes"
        app:layout_constraintBottom_toBottomOf="@+id/txtLikes"
        app:srcCompat="@drawable/ic_reposts_24"/>
    <TextView
        android:id="@+id/txtReposts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_spacing"
        app:layout_constraintTop_toTopOf="@+id/imgReposts"
        app:layout_constraintBottom_toBottomOf="@+id/imgReposts"
        app:layout_constraintStart_toEndOf="@+id/imgReposts"
        tools:text="@sample/posts.json/data/reposts"/>

    <TextView
        android:id="@+id/txtViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imgViews"
        app:layout_constraintBottom_toBottomOf="@id/imgViews"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@sample/posts.json/data/views"/>
    <ImageButton
        android:id="@+id/imgViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/common_spacing"
        android:layout_marginEnd="@dimen/common_spacing"
        app:layout_constraintTop_toBottomOf="@+id/barrier2"
        app:layout_constraintEnd_toStartOf="@id/txtViews"
        app:srcCompat="@drawable/ic_views_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>